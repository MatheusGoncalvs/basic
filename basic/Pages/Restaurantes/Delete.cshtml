@page
@model basic.Pages.Restaurantes.DeleteModel
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Deleting...";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2>Delete</h2>
    <div class="alert alert-danger">
        Are you sure you to delete @Model.Restaurante.Name?
    </div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Yes!</button>
        <a asp-page="List" class="btn btn-default">Cancel</a>
    </form>
</body>
</html>
